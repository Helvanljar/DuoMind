# ===============================
# DuoMind â€“ Environment Variables
# ===============================

# -------- App / Environment --------
ENV=development
DEBUG=true

# -------- Quotas / Limits --------
# Daily guest (IP-based) request limit
GUEST_MAX_PER_DAY=5

# Daily limit for logged-in users without BYOK (using server keys)
USER_SERVER_MAX_PER_DAY=20

# -------- LLM Provider Keys --------
# Leave empty for local testing or guest-only mode

# OpenAI (used only if BYOK or explicitly enabled)
OPENAI_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# Mistral
MISTRAL_API_KEY=

# -------- Optional: Judge Behavior --------
# Allow OpenAI as judge only for BYOK users (recommended)
ALLOW_OPENAI_JUDGE=false

# -------- Database --------
# SQLite path (relative or absolute)
DATABASE_URL=sqlite:///backend/duomind_app/duomind.db

# -------- Security --------
# Change in production!
JWT_SECRET_KEY=dev-secret-change-me
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# -------- Server --------
HOST=127.0.0.1
PORT=8000
